<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.android.battleships.MainActivity">

<ImageButton
    android:id="@+id/a1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ship_front_left"
    android:padding="0dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"/>
<ImageButton
    android:id="@+id/a2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ship_middle_horizontal"
    android:padding="0dp"
    android:layout_toRightOf="@id/a1"/>
<ImageButton
    android:id="@+id/a3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ship_end_left_hit"
    android:padding="0dp"
    android:layout_toRightOf="@id/a2"/>
<ImageButton
    android:id="@+id/a4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sea"
    android:padding="0dp"
    android:layout_toRightOf="@id/a3"/>
<ImageButton
    android:id="@+id/a5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sea"
    android:padding="0dp"
    android:layout_toRightOf="@id/a4"/>
<ImageButton
    android:id="@+id/a6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sea"
    android:padding="0dp"
    android:layout_toRightOf="@id/a5"/>
<ImageButton
    android:id="@+id/b1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sea"
    android:padding="0dp"
    android:layout_below="@id/a1"/>
<ImageButton
    android:id="@+id/b2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sea"
    android:padding="0dp"
    android:layout_toRightOf="@id/b1"
    android:layout_below="@id/a2"/>
</RelativeLayout>
