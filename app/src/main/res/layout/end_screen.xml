<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/endScreenBackground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You won!"
        android:textSize="64sp"
        android:background="@color/endScreenTitle"
        android:id="@+id/youwon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Well Done!"
        android:textSize="28sp"
        android:background="@color/endScreenTitle"
        android:padding="@dimen/end_screen_padding"
        android:id="@+id/youwon2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/player_name"
                android:textSize="24sp"
                android:background="@color/endScreenPlayer"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fired 0 shots"
                android:textSize="24sp"
                android:id="@+id/shots1"
                android:background="@color/endScreenPlayer"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 shots hit"
                android:textSize="24sp"
                android:id="@+id/hits1"
                android:background="@color/endScreenPlayer"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 shots missed"
                android:textSize="24sp"
                android:id="@+id/misses1"
                android:background="@color/endScreenPlayer"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0% accuracy"
                android:textSize="24sp"
                android:id="@+id/percentage1"
                android:background="@color/endScreenPlayer"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 ships sunk"
                android:textSize="24sp"
                android:id="@+id/sunk1"
                android:background="@color/endScreenPlayer"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/opponent_name"
                android:textSize="24sp"
                android:background="@color/endScreenOpponent"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fired 0 shots"
                android:textSize="24sp"
                android:id="@+id/shots2"
                android:background="@color/endScreenOpponent"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 shots hit"
                android:textSize="24sp"
                android:id="@+id/hits2"
                android:background="@color/endScreenOpponent"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 shots missed"
                android:textSize="24sp"
                android:id="@+id/misses2"
                android:background="@color/endScreenOpponent"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0% accuracy"
                android:textSize="24sp"
                android:id="@+id/percentage2"
                android:background="@color/endScreenOpponent"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0 ships sunk"
                android:textSize="24sp"
                android:id="@+id/sunk2"
                android:background="@color/endScreenOpponent"
                android:padding="@dimen/end_screen_padding"
                android:layout_margin="@dimen/end_screen_padding"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="36sp"
        android:background="@color/endScreenStats"
        android:padding="@dimen/end_screen_padding"
        android:layout_margin="@dimen/end_screen_padding"
        android:gravity="center"
        android:onClick="mainMenu"/>
</LinearLayout>